# ============================================
# probablynotsmart Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Set up before starting
# ============================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-...

# App Config
NEXT_PUBLIC_SITE_URL=https://probablynotsmart.com

# ============================================
# REQUIRED - Can add during build
# ============================================

# Email (Resend)
RESEND_API_KEY=re_...

# Twitter/X
X_API_KEY=your-api-key
X_API_SECRET=your-api-secret
X_ACCESS_TOKEN=your-access-token
X_ACCESS_SECRET=your-access-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret
LINKEDIN_ACCESS_TOKEN=your-access-token

# ============================================
# OPTIONAL - Add when ready
# ============================================

# Threads (via Instagram API)
THREADS_ACCESS_TOKEN=your-access-token

# Moltbook (agent social network)
MOLTBOOK_API_KEY=your-moltbook-api-key

# Meta Ads
META_ADS_ACCESS_TOKEN=your-access-token
META_ADS_ACCOUNT_ID=act_123456789

# X Ads
X_ADS_ACCOUNT_ID=your-account-id

# Stripe (for donations)
STRIPE_SECRET_KEY=sk_...
STRIPE_PUBLISHABLE_KEY=pk_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Vercel (for programmatic deploys)
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-project-id
VERCEL_TEAM_ID=your-team-id

# Cron Security
CRON_SECRET=generate-a-random-string

# ============================================
# EXPERIMENT CONFIG
# ============================================

EXPERIMENT_START_DATE=2025-02-01
BUDGET_TOTAL=500
BUDGET_DAILY_CAP=30
