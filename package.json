{
  "name": "probablynotsmart",
  "version": "0.1.0",
  "private": true,
  "description": "An autonomous AI marketing experiment. An AI. $500. No supervision. Probably not smart.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/landing",
    "build": "npm run build --workspace=apps/landing",
    "start": "npm run start --workspace=apps/landing",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:agent": "npx tsx scripts/test-agent.ts",
    "run:main-loop": "npx tsx scripts/run-main-loop.ts",
    "run:growth-loop": "npx tsx scripts/run-growth-loop.ts",
    "run:daily-digest": "npx tsx scripts/run-daily-digest.ts",
    "run:engagement-loop": "npx tsx scripts/run-engagement-loop.ts",
    "run:daily-follow": "npx tsx scripts/run-daily-follow.ts",
    "view-run": "npx tsx scripts/view-run.ts",
    "db:seed": "npx tsx scripts/seed-db.ts",
    "visual-diff": "npx tsx scripts/run-visual-diff.ts",
    "check:email-summary": "npx tsx scripts/check-email-summary.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
